%% Remember to load babel before loading this package or define the command \abstractname!
\makeatletter
\newenvironment{abstract}{
  \titlepage \null
  \@beginparpenalty\@lowpenalty
  \begin{center}
	\bfseries Abstract
	\@endparpenalty\@M~
  \end{center}}
 {\par\vfil\null\endtitlepage}
\makeatother

\makeatletter
\newenvironment{acknowledgments}{
	\titlepage \null
	\small
	\begin{center}
	  {\bfseries Acknowledgments\vspace{-.5em}\vspace{\z@}}~
	\end{center}
	\quotation
  }{}
\makeatother

% Declaration
\makeatletter
\newenvironment{declaration}{
	\titlepage \null
	\small
	\begin{center}
	  {\bfseries Declaration\vspace{-.5em}\vspace{\z@}}
	\end{center}
	\quotation
  }{}
\makeatother	  

